<!-- Formulario para crear nueva colección -->
<div class="container mt-4">
  <h1 class="mb-4">Crear Nueva Colección</h1>
  
  <div class="mb-4">
    <a href="/collections/mis-colecciones" class="btn btn-outline-primary">
      <i class="fas fa-arrow-left"></i> Volver a Mis Colecciones
    </a>
  </div>
  
  <div class="card">
    <div class="card-body">
      <form action="/collections/nueva" method="POST">
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre de la Colección *</label>
          <input type="text" class="form-control" id="nombre" name="nombre" required>
        </div>
        
        <div class="mb-3">
          <label for="descripcion" class="form-label">Descripción</label>
          <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
        </div>
        
        <div class="mb-3">
          <label for="peliculas" class="form-label">Películas</label>
          <select class="form-select" id="peliculas" name="peliculas" multiple>
            <% movies.forEach(movie => { %>
              <option value="<%= movie._id %>"><%= movie.titulo %> (<%= movie.anio %>)</option>
            <% }); %>
          </select>
          <small class="form-text text-muted">Mantén presionada la tecla Ctrl (o Cmd en Mac) para seleccionar múltiples películas.</small>
        </div>
        
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="publica" name="publica">
          <label class="form-check-label" for="publica">Hacer esta colección pública</label>
          <small class="form-text text-muted d-block">Las colecciones públicas son visibles para todos los usuarios.</small>
        </div>
        
        <button type="submit" class="btn btn-success">
          <i class="fas fa-save"></i> Guardar Colección
        </button>
      </form>
    </div>
  </div>
</div>

