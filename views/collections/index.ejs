<!-- Lista de colecciones públicas -->
<div class="container mt-4">
  <h1 class="mb-4">Colecciones de Películas</h1>
  
  <% if (user) { %>
    <div class="mb-4">
      <a href="/collections/mis-colecciones" class="btn btn-primary">
        <i class="fas fa-list"></i> Mis Colecciones
      </a>
      <a href="/collections/nueva" class="btn btn-success">
        <i class="fas fa-plus"></i> Crear Nueva Colección
      </a>
    </div>
  <% } %>
  
  <% if (collections && collections.length > 0) { %>
    <div class="row">
      <% collections.forEach(collection => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-header bg-primary text-white">
              <h5 class="card-title mb-0"><%= collection.nombre %></h5>
            </div>
            <div class="card-body">
              <% if (collection.descripcion) { %>
                <p class="card-text"><%= collection.descripcion %></p>
              <% } else { %>
                <p class="card-text text-muted">Sin descripción</p>
              <% } %>
              
              <p class="card-text">
                <small class="text-muted">
                  <i class="fas fa-film"></i> <%= collection.peliculas.length %> películas
                </small>
              </p>
              
              <p class="card-text">
                <small class="text-muted">
                  <i class="fas fa-user"></i> Creada por <%= collection.creador.username %>
                </small>
              </p>
            </div>
            <div class="card-footer">
              <a href="/collections/<%= collection._id %>" class="btn btn-outline-primary btn-sm">
                <i class="fas fa-eye"></i> Ver Colección
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle"></i> No hay colecciones públicas disponibles.
    </div>
  <% } %>
</div>
