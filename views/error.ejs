<% /* No incluir header, ya lo maneja express-ejs-layouts */ %>

<!-- Establecer el título de la página -->
<% title = 'Error' %>

<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card shadow border-danger">
      <div class="card-header bg-danger text-white text-center">
        <h4 class="mb-0">Error</h4>
      </div>
      <div class="card-body text-center">
        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
        <h5 class="card-title"><%= message || 'Ha ocurrido un error inesperado' %></h5>
        <p class="card-text mt-3">Lo sentimos, algo salió mal. Por favor, inténtalo de nuevo más tarde.</p>
        <a href="/" class="btn btn-primary mt-3">Volver al inicio</a>
      </div>
    </div>
  </div>
</div>

<% /* No incluir footer, ya lo maneja express-ejs-layouts */ %>
